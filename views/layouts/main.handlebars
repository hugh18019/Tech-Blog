<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <title>Tech Blog</title>
    <link
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css'
      rel='stylesheet'
      integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC'
      crossorigin='anonymous'
    />
    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body>
    <div class='flex-column justify-space-around'>
      <header class='display-flex justify-space-between align-center p-2'>
        <h1>
          The Tech Blog
        </h1>
        <ul class='nav'>
          <li class='nav-item'>
            <a 
              class='nav-link active'
              href='/'
            >
              Home
            </a>
          </li>
          <li class='nav-item'>
            <a 
              class='nav-link'
              href='/posts'
            >
              Dashboard
            </a>
          </li>
          <li class='nav-item'>
            {{#if sess.logged_in}}
              <a
                class='nav-link'
                tabindex='-1'
                aria-disabled='true'
                id='logout'
              >Logout</a>
            {{else}}
              <a
                class='nav-link'
                href='/login'
                tabindex='-1'
                aria-disabled='true'
                id='login'
              >
                login
              </a>
            {{/if}}
          </li>
          <li class='nav-item'>
            <a 
              class='nav-link'
              href='/signup'
              tabindex='-1'
              aria-disabled='true'
              id='signup'
            >
              Signup
            </a>

          </li>
        </ul>
      </header>
      <main class='container container-fluid mt-5 flex-row justify-content-center align-items-center h-100 w-100'>
        {{{body}}}
      </main>
    </div>

    {{#if logged_in}}
      <script src='/js/logout.js'></script>
    {{/if}}

    <script src='/js/main.js'></script>
  </body>

</html>